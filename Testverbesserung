private:

float minimum = 1000;
float summme = 0;
int zaehler = 0;

public:

float getMinimum()
{
return minimum;
}

float getmittelwert()
{
return summe/zaehler;
}

void messen()
{

if(temperatur<minimum)
{
minimum = temperatur;
}

summe = summe + temperatur;
zaehler++;

void resetmittlwert()
{
Summe=0;
zaehler=0;
}

